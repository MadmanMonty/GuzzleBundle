<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="playbloom_guzzle.client.plugin.logger" class="GuzzleHttp\Subscriber\Log\LogSubscriber" public="true">
            <argument type="service" id="logger"/>
            <argument>Requested "{host}" {method} "{resource}"</argument>
            <tag name="playbloom_guzzle.client.plugin" />
            <tag name="monolog.logger" channel="guzzle" />
        </service>

        <service id="playbloom_guzzle.client.plugin.timer" class="Playbloom\Bundle\GuzzleBundle\Subscriber\StopwatchSubscriber" public="true">
            <argument type="service" id="playbloom_guzzle.timer.data"/>
            <tag name="playbloom_guzzle.client.plugin" />
        </service>

        <service id="playbloom_guzzle.timer.data" class="SplObjectStorage" public="true">
        </service>

        <service id="playbloom_guzzle.client.plugin.profiler" class="GuzzleHttp\Subscriber\History" public="true">
            <argument>100</argument>
        </service>
    </services>

</container>
